{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "types": [
      "@remix-run/dev",
      "@remix-run/node/globals",
      "react/next",
      "react-dom/next"
    ],
    "paths": {
      "~/*": ["./src/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
