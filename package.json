{
  "name": "magic",
  "version": "0.0.0-development",
  "private": "true",
  "scripts": {
    "build": "remix build",
    "build:css": "postcss styles --base styles --dir src/styles --env production",
    "dev": "concurrently \"pnpm dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir src/styles -w",
    "prepare": "is-ci || husky install",
    "start": "remix-serve build"
  },
  "commitlint": {
    "extends": [
      "@0x219"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint",
    "*.{js,ts,tsx,md,html,css,json}": "prettier --write",
    "!(*pnpm-lock).yaml": "prettier --write"
  },
  "dependencies": {
    "@remix-run/node": "1.3.5",
    "@remix-run/react": "1.3.4",
    "@remix-run/serve": "1.3.4",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@0x219/commitlint-config": "1.0.2",
    "@commitlint/cli": "16.2.3",
    "@remix-run/dev": "1.3.5",
    "@remix-run/eslint-config": "1.3.4",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "autoprefixer": "10.4.4",
    "concurrently": "7.1.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "lint-staged": "12.3.7",
    "postcss": "8.4.12",
    "postcss-cli": "9.1.0",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "2.2.17",
    "prettier-plugin-tailwindcss": "0.1.8",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=14"
  }
}
